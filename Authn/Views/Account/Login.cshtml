@{
    string returnUrl = ViewData["ReturnUrl"] as string;
    string loginFailedValue = ViewData["LoginFailed"] as string;
    bool loginFailed = false;
    if (!string.IsNullOrEmpty(loginFailedValue))
    {
        loginFailed = loginFailedValue == "True";
    }

    string username = ViewData["Username"] as string;
    var error = TempData["Error"] as string;
}
<style>
    @@media screen and (max-width: 730px) {
        .sign-up-grid-divider {
            border-top: solid 2px gray;
        }
    }

    @@media screen and (min-width: 730px) {
        .sign-up-grid {
            display: grid;
            grid-template-areas: "left divider right";
            grid-template-columns: 300px 30px 300px;
        }

        .sign-up-grid-left {
            grid-area: left;
        }

        .sign-up-grid-divider {
            border-left: solid 2px gray;
            grid-area: divider;
        }

        .sign-up-grid-right {
            grid-area: right;
        }
    }

    .login-label {
        margin-top: 10px;
        text-align: center;
        font-weight: 700;
        font-size: large;
        padding-right: 16px;
        color: rgba(35, 10, 57, 0.84);
    }

    .login-failed {
        margin-bottom: 10px;
        text-align: left;
        font-weight: 600;
        font-size: small;
        padding: 8px;
        border: 1px solid red;
        background-color: #ffd8d8;
    }

    .login-list {
        margin: 10px;
    }

        .login-list li {
            border-radius: 5px;
            list-style: none;
            margin-bottom: 20px;
            margin-top: 20px;
            padding: 10px;
            width: 200px;
        }

            .login-list li a {
                color: white;
                text-decoration: none;
            }

        .login-list i {
            margin: 5px;
        }

    #google {
        background-color: #dd4b3c;
    }

    #facebook {
        background-color: #3c5899;
    }

    #microsoft {
        background-color: #044185;
    }

    #okta {
        background-color: #2084ba;
    }
</style>
<h1>Login</h1>
@if (!string.IsNullOrEmpty(error))
{
    <h2 class="alert-danger" style="padding:20px;">@error</h2>
}
